{
  "name": "@remkoj/optimizely-one-nextjs",
  "version": "0.0.1",
  "packageManager": "yarn@4.1.0",
  "private": true,
  "type": "module",
  "main": "./dist/client.js",
  "types": "./dist/client.d.ts",
  "files": [
    "./dist",
    "package.json"
  ],
  "exports": {
    ".": "./dist/client.js",
    "./api": "./dist/api.js",
    "./client": "./dist/client.js",
    "./server": "./dist/server.js",
    "./types": "./dist/types.js",
    "./optimizely-one-gadget": "./dist/components/optimizely-one-gadget/index.js"
  },
  "typesVersions": {
    "*": {
      "api": [
        "dist/api.d.ts"
      ],
      "client": [
        "dist/client.d.ts"
      ],
      "server": [
        "dist/server.d.ts"
      ],
      "types": [
        "dist/types.d.ts"
      ],
      "optimizely-one-gadget": [
        "dist/components/optimizely-one-gadget/index.d.ts"
      ]
    }
  },
  "devDependencies": {
    "@headlessui/react": "^1.7.18",
    "@headlessui/tailwindcss": "^0.2.0",
    "@heroicons/react": "^2.1.1",
    "@remkoj/optimizely-graph-client": "workspace:^",
    "@types/node": "^20.11.27",
    "@types/react": "^18.2.65",
    "@types/react-dom": "18.2.22",
    "@types/uuid": "^9.0.8",
    "next": "^14.1.3",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "scheduler": "^0.23.0",
    "swr": "^2.2.5",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.4.2",
    "uuid": "^9.0.1"
  },
  "peerDependencies": {
    "@headlessui/react": "*",
    "@heroicons/react": "*",
    "@remkoj/optimizely-graph-client": "workspace:^",
    "next": "*",
    "react": "*",
    "react-dom": "*",
    "swr": "*",
    "uuid": "*"
  },
  "scripts": {
    "clean": "tsc --build --clean",
    "build": "tsc --build && tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify",
    "watch": "tsc --watch",
    "watch-styles": "tailwindcss -i ./src/styles.css -o ./dist/styles.css --minify --watch",
    "rebuild": "tsc --build --clean && tsc --build --force"
  }
}
